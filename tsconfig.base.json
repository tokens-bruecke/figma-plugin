{
  "compilerOptions": {
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "es2021"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@cli/*": [
        "src/cli/*"
      ],
    },
  }
}